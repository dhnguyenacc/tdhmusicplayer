<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#6b6b6b"
    android:padding="5dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/coverNotiIv"
        android:src="@drawable/music_icon"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:id="@+id/songNotiIv"
        android:layout_toRightOf="@id/coverNotiIv"
        android:layout_centerVertical="true">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameNotiTv"
        android:text="Still loving you"
        android:textColor="#FFFFFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artistNotiTv"
            android:text="Scorpions"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/closeNotiIv"
        android:src="@drawable/closet"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playNotiIv"
        android:src="@drawable/pausenoti"
        android:layout_toLeftOf="@id/closeNotiIv"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"/>
</RelativeLayout>